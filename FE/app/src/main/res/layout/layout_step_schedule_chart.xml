<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:background="@drawable/bck_schedule_step_counter_title">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_10sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_sunday_abbreviation"
            android:textColor="@color/black" />

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/cir_step_sun"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:visibility="visible"
            app:cpb_background_progressbar_color="#B93A3A"
            app:cpb_background_progressbar_width="@dimen/_2sdp"
            app:cpb_progress_direction="to_right"
            app:cpb_progressbar_color="#969ECD"
            app:cpb_progressbar_width="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_10sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_monday_abbreviation"
            android:textColor="@color/black" />

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/cir_step_mon"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:visibility="visible"
            app:cpb_background_progressbar_color="#B93A3A"
            app:cpb_background_progressbar_width="@dimen/_2sdp"
            app:cpb_progress_direction="to_right"
            app:cpb_progressbar_color="#969ECD"
            app:cpb_progressbar_width="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_10sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_tuesday_abbreviation"
            android:textColor="@color/black" />

