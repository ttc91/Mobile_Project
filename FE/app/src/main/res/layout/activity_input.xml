<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.android.mobile_project.ui.activity.input.InputViewModel" />

        <variable
            name="a"
            type="com.android.mobile_project.ui.activity.input.InputActivity" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:src="@drawable/ic_activity_input_tree"
                android:contentDescription="@string/str_habit_tracker_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/str_habit_tracker"
                android:textStyle="bold"
                android:textSize="@dimen/_20ssp" />

            <EditText
                android:id="@+id/edt_input_user"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/bck_habit_name"
                android:hint="@string/str_habit_name"
                android:maxLength="20"
                android:gravity="center"
                android:inputType="text"
                android:autofillHints="username"/>


        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_next"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:onClick="onClick"
            tools:ignore="UsingOnClickInXml">

            <ImageView
                android:id="@+id/bck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/bck_circle_white_btn"
                android:contentDescription="@string/str_next_to_main_activity" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/btn_next"
                app:layout_constraintEnd_toEndOf="@+id/btn_next"
                app:layout_constraintBottom_toBottomOf="@+id/btn_next"
                app:layout_constraintStart_toStartOf="@+id/btn_next"
                android:src="@drawable/ic_arrow_next"
                android:contentDescription="@string/str_right_arrow" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>